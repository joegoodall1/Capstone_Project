<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.getstrength.myapplication"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="com.android.alarm.permission.SET_TIMER"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.getstrength.myapplication.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <provider
            android:name="com.getstrength.myapplication.NotesProvider"
            android:authorities="com.getstrength.myapplication.notesprovider"
            android:exported="false"/>

        <activity
            android:name="com.getstrength.myapplication.NotesActivity"
            android:label="History"
            android:parentActivityName="com.getstrength.myapplication.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.getstrength.myapplication.MainActivity"/>
        </activity>

        <activity
            android:name="com.getstrength.myapplication.EditorActivity"
            android:label="@string/title_activity_editor"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName="com.getstrength.myapplication.NotesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.getstrength.myapplication.NotesActivity"
                android:launchMode="singleTop"/>
        </activity>

        <activity
            android:name="com.getstrength.myapplication.SignIn"
            android:label="@string/sign_in_header">
        </activity>

        <activity
            android:name="com.getstrength.myapplication.BasicActivity"
            android:label="@string/sign_in_header">
        </activity>


    </application>

</manifest>
